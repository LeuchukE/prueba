<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Email" >

    <Button
        android:id="@+id/BtnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar" />

    <TextView
        android:id="@+id/LblDestinatario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnEnviar"
        android:text="Para:" />

    <EditText
        android:id="@+id/txtDestinatario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblDestinatario"
        android:inputType="text" />

    <TextView
        android:id="@+id/LblAsunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDestinatario"
        android:text="Asunto:" />

    <EditText
        android:id="@+id/txtAsunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblAsunto"
        android:inputType="text" />

    <TextView
        android:id="@+id/LblMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAsunto"
        android:text="Mensaje:" />

    <EditText
        android:id="@+id/txtMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblMensaje"
        android:inputType="text" />

</RelativeLayout>